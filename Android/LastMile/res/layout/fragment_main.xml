<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/testinglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:alpha="0.8"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/pickuplocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#7BB46D" />

        <TextView
            android:id="@+id/StreetName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickuplocation"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/pin"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerInParent="True"
            android:src="@drawable/pin_green" />
        
          <ImageView
            android:id="@+id/pin_red"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerInParent="True"
            android:src="@drawable/pin_red" />

        <TextView
            android:id="@+id/ETA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="True"
            android:paddingBottom="45dp"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ETA_TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="True"
            android:paddingBottom="25dp"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <com.dd.CircularProgressButton
        android:id="@+id/pickup_button"
        android:layout_width="196dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cpb_colorIndicator="#24960b"
        app:cpb_colorProgress="#000000"
        app:cpb_cornerRadius="48dp"
        app:cpb_textComplete="BOOKED"
        app:cpb_textError="TRY AGAIN"
        app:cpb_textIdle="REQUEST PICKUP" />

</RelativeLayout>